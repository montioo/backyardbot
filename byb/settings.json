{
    "server": {
        "ip": "localhost",
        "port": 8888
    },

    "general": {
        "log_file": "byb.log",
        "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "log_to_stream": true,
        "log_to_file": true
    },

    "application": {
        "plugin_directory": "plugins",
        "static_web_files": [
            "web/overlay.css",
            "web/byb.css",
            "web/overlay.js",
            "web/byb.js"
        ],
        "template_web_files": [
            "web/index.html"
        ],
        "template_index": "web/index.html"
    },

    "database_tables": {
        "time_schedule": "time_schedule_table",
        "sprinkler_info": "sprinkler_info_table"
    }
}