{
    "server": {
        "ip": "localhost",
        "port": 8888
    },

    "logging": {
        "log_file": "byb.log",
        "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "log_to_stream": true,
        "log_to_file": true,
        "log_level_stream": "INFO",
        "log_level_file": "DEBUG"
    },

    "general": {
        "language": ["en", "de"]
    },

    "application": {
        "plugin_directory": "plugins",
        "static_web_files": [
            "web/overlay.css",
            "web/byb.css",
            "web/overlay.js",
            "web/byb.js"
        ],
        "template_web_files": [
            "web/index.html"
        ],
        "template_index": "web/index.html"
    },

    "database_tables": {
        "time_schedule": "time_schedule_table",
        "sprinkler_info": "zone_info_table"
    },

    "localization": {
        "en": {
            "weekdays_short": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
            "weekdays": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
            "daily": "daily"
        },
        "de": {
            "weekdays_short": ["Mo", "Di", "Mi", "Do", "Fr", "Sa", "So"],
            "weekdays": ["Montag", "Dienstag", "Mittwoch", "Donnerstag", "Freitag", "Samstag", "Sonntag"],
            "daily": "t√§glich"
        }
    }
}